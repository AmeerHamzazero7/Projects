<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#000">

    <RelativeLayout
        android:layout_width="150dp"
        android:layout_height="160dp"
        android:id="@+id/Timer_Anim"
        android:padding="10dp"
        android:background="#000">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/visualizer_02"
            android:layout_centerInParent="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:lottie_autoPlay="true"
            app:lottie_loop="true"
            app:lottie_rawRes="@raw/timer_99" />

    </RelativeLayout>

    <View
        android:layout_width="3dp"
        android:layout_height="160dp"
        android:background="?attr/Text_Color"
        android:layout_toEndOf="@+id/Timer_Anim"
        android:layout_centerInParent="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_toEndOf="@+id/Timer_Anim"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="3dp"
        android:layout_height="wrap_content"
        android:background="#000">

        <RelativeLayout
            android:id="@+id/min_15"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="3dp"
            android:layout_marginBottom="3dp"
            android:background="#202020">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/min_15"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:gravity="center_vertical" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/min_30"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#202020"
            android:layout_marginBottom="3dp"
            android:layout_below="@+id/min_15">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/min_30"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:gravity="center_vertical" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/min_60"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="#202020"
            android:layout_marginBottom="3dp"
            android:layout_below="@+id/min_30">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/min_60"
                android:textStyle="bold"
                android:layout_centerVertical="true"
                android:layout_marginStart="10dp"
                android:textColor="@color/colorAccent"
                android:textSize="18sp"
                android:gravity="center_vertical" />
        </RelativeLayout>

    </RelativeLayout>

</RelativeLayout>