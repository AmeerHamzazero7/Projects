<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/linearLayoutNav"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    android:orientation="vertical"
    android:layout_marginTop="40dp"
    android:padding="16dp"
    android:background="#000000">

    <ImageView
        android:id="@+id/Groove_Icon"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/groove"
        android:contentDescription="@string/app_icon" />

    <TextView
        android:id="@+id/Groove"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/Groove_Icon"
        android:text="@string/text_nav"
        android:textColor="@color/colorAccent"
        android:textSize="35sp"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The Only Truth is Music..!!"
        android:textColor="#D3D3D3"
        android:layout_below="@id/Groove" />

</RelativeLayout>